<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/bg_top" />
            <ImageView
                android:id="@+id/reg_back"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                app:tint="@color/gray"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_home2"
                android:backgroundTint="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="-5dp"
                android:text="IOT SMART HOME"
                android:textColor="@color/black"
                android:textSize="40sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="160dp"
                android:text="Đăng kí tài khoản"
                android:textColor="@color/black"
                android:textSize="22dp" />

        </FrameLayout>

        <EditText
            android:id="@+id/reg_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="3dp"
            android:autofillHints="Name"
            android:background="@drawable/bg_radius"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="10dp"
            android:textColorHint="@color/itemTextColor"
            android:hint="Tên"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/reg_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:autofillHints="phone"
            android:background="@drawable/bg_radius"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:textColorHint="@color/itemTextColor"
            android:hint="Số điện thoại"
            android:inputType="textPhonetic"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/reg_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:autofillHints="Email"
            android:background="@drawable/bg_radius"
            android:drawableStart="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:textColorHint="@color/itemTextColor"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/reg_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:autofillHints="Password"
            android:background="@drawable/bg_radius"
            android:drawableStart="@drawable/ic_key"
            android:drawablePadding="10dp"
            android:textColorHint="@color/itemTextColor"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ok_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/bg_login"
            android:gravity="center"
            android:padding="10dp"
            android:text="Đăng kí"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn đã có tài khoản? "
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/reg_login_ima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textColor="@color/teal_700"
                android:textSize="15sp" />
        </TableRow>
    </LinearLayout>

</RelativeLayout>