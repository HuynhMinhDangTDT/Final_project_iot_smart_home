<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".AddDevice">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/widgetNameAdd"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:gravity="center"
          android:hint="nhập tên thiết bị"
          android:inputType="textPersonName"
          android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="Chọn 1 chân thiết bị"
          android:textColor="@color/black"
          android:textSize="20dp"
          android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

      <HorizontalScrollView
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <Button
              android:id="@+id/D0"
              android:layout_width="70dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="20dp"
              android:text="D0" />

          <Button
              android:id="@+id/D1"
              android:layout_width="70dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="20dp"
              android:text="D1" />

          <Button
              android:id="@+id/D2"
              android:layout_width="70dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="20dp"
              android:text="D2" />

          <Button
              android:id="@+id/D3"
              android:layout_width="70dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="20dp"
              android:text="D3" />

          <Button
              android:id="@+id/D4"
              android:layout_width="70dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="20dp"
              android:text="D4" />

          <Button
              android:id="@+id/D5"
              android:layout_width="70dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="20dp"
              android:text="D5" />

          <Button
              android:id="@+id/D6"
              android:layout_width="70dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="20dp"
              android:text="D6" />

          <Button
              android:id="@+id/D7"
              android:layout_width="70dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="20dp"
              android:text="D7" />

          <Button
              android:id="@+id/D8"
              android:layout_width="70dp"
              android:layout_height="wrap_content"
              android:layout_marginRight="20dp"
              android:text="D8" />

        </LinearLayout>
      </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

      <TextView
          android:id="@+id/widgetTypeAdd"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:ems="10"
          android:text="Chọn kiểu thiết bị"
          android:textColor="@color/black"
          android:textSize="20dp"
          android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

      <Button
          android:id="@+id/addWidgeSwitch"
          android:layout_width="160dp"
          android:layout_height="wrap_content"
          android:text="Nút gạt" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">

      <Button
          android:id="@+id/confirmAdd"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_weight="1"
          android:backgroundTint="@color/primaryColor"
          android:text="XÁC NHẬN" />

    </LinearLayout>
  </LinearLayout>

</RelativeLayout>